define jz = Character('Йозеф Вопер', color="#7a829b")
define v = Character('Вернер Бауманн', color="#86281c")
define x = Character('...', color="#ffffff")

## Определение звуков
define audio.scream = "audio/scream.mp3"
define audio.tummy = "audio/tummy.mp3"
define audio.door = "audio/door.mp3"
define audio.fall = "audio/fall.mp3"

## Определение изображений
image Nicola normal = "images/sprites/Nicola Normal.png"
